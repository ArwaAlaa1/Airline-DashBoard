@model AirLine.ViewModel.TransactionModel

@{
    ViewData["Title"] = "Create";
}

<h1>Add Transaction</h1>

<hr />
<div class="card">
    <div class="card-body">
        <h5 class="card-title">Create Transaction</h5>

        <!-- No Labels Form -->
        <form class="row g-3" asp-action="Create" asp-controller="Transaction">
            <div class="col-md-6">
                <label> Code </label>
                <input asp-for="Id" class="form-control" placeholder="Code">
            </div>
            <div class="col-md-6">
                <label> Description </label>
                <input asp-for="Description" class="form-control" placeholder="Description">
            </div>
            <div class="col-md-6">
                <label> Date </label>
                <input asp-for="Date" class="form-control" placeholder="Date">
            </div>
            <div class="col-md-6">
                <label> Amount Money </label>
                <input asp-for="Amount_Money" class="form-control" placeholder="Amount_Money">
            </div>

            <div class="col-md-4">
                <label> AirLine Name </label>
                <select asp-for="AirlineId" class="form-control" asp-items="@(new SelectList(Model.AirLines,"Id" ,"Name" ))"></select>

            </div>
           @* <div class="col-md-4">
                <select asp-for="Classification" id="inputState" class="form-select" placeholder="Classification">
                    <option>domestic</option>
                    <option>international route</option>
                </select>
            </div>*@

            <div class="text-center">
                <button type="submit" class="btn btn-primary">Submit</button>
            </div>
        </form><!-- End No Labels Form -->

    </div>
</div>


<div>
    <a asp-action="Index" type="submit" class="btn btn-primary"> Back to List</a>   
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
